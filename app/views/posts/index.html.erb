<h2><%= t(:listing, :default => "Listing") %> <%= t(:posts, :default => "posts") %></h2>

<p>
  <%= link_to '<i class="icon-plus"></i>'.html_safe + t(:new, :default => "New") + ' ' + t(:post, :default => "post"), new_post_path, :class => "btn" %>
  <% if Post.columns.map(&:name).include?("post_id") then %>
    <%= link_to '<i class="icon-folder-close"></i>'.html_safe + t(:treeview, :default => "Treeview") + ' ' + t(:post, :default => "post"), treeview_posts_path, :class => "btn" %>
  <% end %>
</p>

<%= render :partial => "layouts/mass_inserting", :locals => { :namespace => '', :model_name => 'post', :model_columns => ['name','title','content'] } %>

<%# Set your scopes below (string in array) %>
<% scopes = [] %>
<% if not scopes.blank? then %>
<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to "All (#{@post_scope_for_scope.count})", posts_path(:scope => ""), :class => "btn #{((session[:scope][:post].to_s == '') ? 'active' : '')}" %>
    <% for scope in scopes %>
    <%= link_to "#{scope} (#{@post_scope_for_scope.send(scope).count})", posts_path(:scope => scope), :class => "btn #{((session[:scope][:post].to_s == scope) ? 'active' : '')}" %>
    <% end %>
  </div>
</div>
<% end %>

<div class="row-fluid">
  <div class="span9">
    <%= form_tag  batch_posts_path, :class => "form-inline" do %>
      <div class="well well-small">
        <label class="control-label" for="select01"><%= t(:batch, :default => "Batch") %></label>

        <select id="select01" name="actionprocess">
          <option value="destroy"><%= t(:destroy, :default => "Destroy") %></option>
          
          <!-- Beautiful_scaffold - AddField - Batch - Do not remove -->
        </select>
        <button class="btn" type="submit"><i class="icon-ok"></i> <%= t(:process, :default => "Process") %></button>
      </div>

      <%= render :partial => "layouts/modal_columns", :locals => { :model_name => "post", :model_columns => ['name','title','content','created_at','updated_at'] } %>

      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>
              <a class="" data-toggle="modal" href="#modal-columns" title="<%= t(:select_columns, :default => "Select Columns") %>" ><i class="icon-th-list"></i></a>
            </th>
            <th>
              <%= check_box_tag :checkall, '' %>
              <script type="text/javascript">
                $('#checkall').click(function(){
                  $('.cbbatch').attr('checked', ($(this).attr('checked') != undefined));
                });
              </script>
            </th>
            <th <%= visible_column("post", "name") %> class="col-name">
  <%= sorting_header("post", "name", "") %>
</th>
<th <%= visible_column("post", "title") %> class="col-title">
  <%= sorting_header("post", "title", "") %>
</th>
<th <%= visible_column("post", "content") %> class="col-content">
  <%= sorting_header("post", "content", "") %>
</th>

            <!-- Beautiful_scaffold - AddField - Header - Do not remove -->
            <th <%= visible_column("post", "created_at") %> class="col-created_at">
              <%= sorting_header("post", "created_at", "") %>
            </th>
            <th <%= visible_column("post", "updated_at") %> class="col-updated_at">
              <%= sorting_header("post", "updated_at", "") %>
            </th>
            <th colspan="3">
              <label class="checkbox">
                <%= check_box_tag :checkallelt, 'all' %>
                <%= pluralize(@post_scope.count, "post") %>
              </label>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr class="line-<%= cycle("1","2") %>">
            <td><%= post.id %></td>
            <td><%= check_box_tag "ids[]",post.id, false, :class => 'cbbatch' %></td>
              <td <%= visible_column("post", "name") %> class="col-name <%= align_attribute("string") %>">
      <%= post.name %>
  </td>
  <td <%= visible_column("post", "title") %> class="col-title <%= align_attribute("string") %>">
      <%= post.title %>
  </td>
  <td <%= visible_column("post", "content") %> class="col-content <%= align_attribute("text") %>">
      <%= post.content %>
  </td>
<!-- Beautiful_scaffold - AddField - Column - Do not remove -->
            <td <%= visible_column("post", "created_at") %> class="col-created_at <%= align_attribute("datetime") %>">
              <%= l(post.created_at, :format => :long) %>
            </td>
            <td <%= visible_column("post", "updated_at") %> class="col-updated_at <%= align_attribute("datetime") %>">
              <%= l(post.updated_at, :format => :long) %>
            </td>
            <td><%= link_to '<i class="icon-search"></i>'.html_safe, post_path(post) %></td>
            <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_post_path(post) %></td>
            <td><%= link_to '<i class="icon-remove"></i>'.html_safe, post_path(post), :confirm => t(:are_you_sure, :default => "Are you sure?"), :method => :delete %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="btn-toolbar">
        <div class="btn-group">
          <% clean_params %>
          <%= will_paginate @posts,
                  :inner_window => 0,
                  :outer_window => 0,
                  :previous_label => t(:prev, :default => "Previous"),
                  :next_label => t(:next, :default => "Next") %>

        </div>
        <div class="btn-group pull-right">
          <%= link_to '<i class="icon-download"></i> CSV'.html_safe,  posts_path(:format => :csv), :class => "nopjax btn" %>
          <%= link_to '<i class="icon-download"></i> XML'.html_safe,  posts_path(:format => :xml), :class => "nopjax btn" %>
          <%= link_to '<i class="icon-download"></i> JSON'.html_safe, posts_path(:format => :json), :class => "nopjax btn" %>
          <%= link_to '<i class="icon-download"></i> PDF'.html_safe,  posts_path(:format => :pdf), :class => "nopjax btn" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span3">
    <%= search_form_for @q, :url => search_posts_path, :html => { :class => "well well-small" }, :method => :post do |f| %>
        <%= ransack_field("post", "name", f, "Name") %>
  <%= ransack_field("post", "title", f, "Title") %>
  <%= ransack_field("post", "content", f, "Content") %>

  <%= ransack_field("post", "created_at", f, "Created At") %>
  <%= ransack_field("post", "updated_at", f, "Updated At") %>
  <%= ransack_field("post", "id", f, "Id") %>

      <!-- Beautiful_scaffold - AddField - Search - Do not remove -->
      <%= f.submit t(:filter, :default => "Filter"), :class => "btn btn-primary" %>
      <%= link_to  t(:cancel, :default => "Cancel"), posts_path(:nosearch => "ok"), :class => "btn" %>
    <% end %>
  </div>
</div>
