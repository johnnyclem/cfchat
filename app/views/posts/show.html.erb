<h2><%= t(:show, :default => "Show") %> <%= t(:post, :default => "post") %></h2>

  <p>
    <b><%= t(:name, :default => "Name") %>:</b>
      <%= @post.name %>
  </p>
  <p>
    <b><%= t(:title, :default => "Title") %>:</b>
      <%= @post.title %>
  </p>
  <p>
    <b><%= t(:content, :default => "Content") %>:</b>
      <%= @post.content %>
  </p>

<!-- Beautiful_scaffold - AddField - Field - Do not remove -->

<%= link_to t(:edit, :default => "Edit"), edit_post_path(@post), :class => "btn" %>
<%= link_to t(:back, :default => "Back"), posts_path, :class => "btn" %>

